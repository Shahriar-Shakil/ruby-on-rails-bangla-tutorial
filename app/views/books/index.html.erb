<h1>Books List</h1>
<%= link_to "Create New Book", books_new_path  %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Book</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <th scope="row">
          <%= book.name %>
        </th>
        <td>
          <%= link_to "Show", book  %>
          <%= link_to "Edit", edit_book_path(book) %>
          <%= link_to "Delete" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
