<h1>Single book Page</h1>
<br>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @book.name %></h5>
    <h6 class="card-subtitle mb-2 text-body-secondary"><%= @book.author %></h6>
    <p class="card-text"><%= @book.description %></p>
    <span  class="card-link">$<%= @book.price %></span>
    <span  class="card-link"><%= @book.available ? "Item is Available" : "Stock out" %></span>
  </div>
</div>
<br>
<%= link_to "Back to List", books_path,class:'btn btn-dark'  %>
